                margin-right:auto;
                width:100%;
            }

            #contents {
                background-color:antiquewhite; 
                width:80%;
                margin-left:auto;
                margin-right:auto;
            }
            .imgStyle {
                width:30px;
                height:30px;
            }

            #footer {
                background-image:url('Properties/ftBanner.jpg');
            }
            
