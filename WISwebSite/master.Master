<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="master.Master.cs" Inherits="WISwebSite.Site1" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title>Welcome Institue of Studies</title>
    <asp:ContentPlaceHolder ID="head" runat="server">
        <style>


            body {
            }

            #form1 {
                width:80%;
                border:solid;
                border-width:1px;
                border-color:darkseagreen;
            }

            .header {
                width:100%;
                margin-left:auto;
                margin-right:auto;
                
            }

            #logoImg {
                margin-left:auto;
                margin-right:auto;
            }
            #bannerImg {
